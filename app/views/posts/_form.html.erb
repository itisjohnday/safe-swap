<div class='well bs-component'>
  <%= form_for [@device, @post], class: 'form-horizontal' do |f| %>
    <% if @post.errors.any? %>
    <fieldset>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this device from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class='form-group'>
        <%= f.label :content, class: 'col-lg-2' %>
        <div class='col-lg-10'>
        <%= f.text_field :content, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="btn btn-primary btn-lg">
        <%= f.submit %>
      </div>
    <fieldset>
  <% end %>
  <%= link_to 'Back', device_posts_path, class: "btn btn-primary btn-lg"%>
</div>